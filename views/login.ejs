<%- include('partials/header') -%>

<main class="min-h-screen flex justify-center items-center">
  <section class="bg-white shadow-xl p-8 rounded-lg w-full max-w-md">
    <% if (locals.messages && locals.messages.errors) { %> 
      <% locals.messages.errors.forEach(el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> 
    <% } %> 
    
    <% if (locals.messages && locals.messages.info) { %> 
      <% locals.messages.info.forEach(el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> 
    <% } %>
    
    <form action="/login" method="POST">
      <div class="mb-4">
        <label for="exampleInputEmail1" class="text-lg font-medium">Email address</label>
        <input
          type="email"
          class="w-full p-3 border rounded-md shadow-sm"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          name="email"
        />
      </div>
      <div class="mb-4">
        <label for="exampleInputPassword1" class="block text-lg font-medium ">Password</label>
        <input
          type="password"
          class="w-full p-3 border rounded-md shadow-sm"
          id="exampleInputPassword1"
          name="password"
        />
      </div>
      <button type="submit" class="w-full p-3 bg-green-400 text-white rounded-md hover:bg-green-700 font-bold">Login</button>
    </form>
  </section>
</main>

<%- include('partials/footer') -%>
